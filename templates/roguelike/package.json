{
	"name": "blecsd-template-roguelike",
	"version": "0.0.1",
	"description": "Classic roguelike dungeon crawler with ECS-driven gameplay",
	"private": true,
	"type": "module",
	"main": "./dist/index.js",
	"scripts": {
		"start": "tsx index.ts",
		"dev": "tsx watch index.ts",
		"build": "tsup index.ts --format esm --dts",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"blecsd": "^0.1.0"
	},
	"devDependencies": {
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	}
}
