{
  "name": "blecsd",
  "version": "0.2.0",
  "description": "A modern, high-performance terminal UI library built on TypeScript and ECS architecture",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "blecsd": "./dist/cli/init.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    },
    "./systems": {
      "import": "./dist/systems/index.js",
      "types": "./dist/systems/index.d.ts"
    },
    "./widgets": {
      "import": "./dist/widgets/index.js",
      "types": "./dist/widgets/index.d.ts"
    },
    "./widgets/bigText": {
      "import": "./dist/widgets/bigText.js",
      "types": "./dist/widgets/bigText.d.ts"
    },
    "./widgets/fonts": {
      "import": "./dist/widgets/fonts/index.js",
      "types": "./dist/widgets/fonts/index.d.ts"
    },
    "./terminal": {
      "import": "./dist/terminal/index.js",
      "types": "./dist/terminal/index.d.ts"
    },
    "./3d": {
      "import": "./dist/3d/index.js",
      "types": "./dist/3d/index.d.ts"
    },
    "./schemas": {
      "import": "./dist/schemas/index.js",
      "types": "./dist/schemas/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./game": {
      "import": "./dist/game/index.js",
      "types": "./dist/game/index.d.ts"
    },
    "./audio": {
      "import": "./dist/audio/index.js",
      "types": "./dist/audio/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./debug": {
      "import": "./dist/debug/index.js",
      "types": "./dist/debug/index.d.ts"
    },
    "./errors": {
      "import": "./dist/errors/index.js",
      "types": "./dist/errors/index.d.ts"
    },
    "./input": {
      "import": "./dist/input/index.js",
      "types": "./dist/input/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "components": [
        "dist/components/index.d.ts"
      ],
      "core": [
        "dist/core/index.d.ts"
      ],
      "debug": [
        "dist/debug/index.d.ts"
      ],
      "errors": [
        "dist/errors/index.d.ts"
      ],
      "game": [
        "dist/game/index.d.ts"
      ],
      "input": [
        "dist/input/index.d.ts"
      ],
      "schemas": [
        "dist/schemas/index.d.ts"
      ],
      "systems": [
        "dist/systems/index.d.ts"
      ],
      "terminal": [
        "dist/terminal/index.d.ts"
      ],
      "utils": [
        "dist/utils/index.d.ts"
      ],
      "widgets": [
        "dist/widgets/index.d.ts"
      ],
      "widgets/bigText": [
        "dist/widgets/bigText.d.ts"
      ],
      "widgets/fonts": [
        "dist/widgets/fonts/index.d.ts"
      ],
      "3d": [
        "dist/3d/index.d.ts"
      ],
      "audio": [
        "dist/audio/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "!dist/**/*.map",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "bench:run": "vitest bench --run",
    "bench:json": "vitest bench --run --outputFile=benchmark-results.json",
    "bench:scenarios": "vitest bench benchmarks/scenarios",
    "bench:ci": "vitest bench benchmarks/ci.bench.ts",
    "bench:startup": "vitest bench benchmarks/startup.bench.ts",
    "bench:update-baseline": "tsx scripts/update-baseline.ts",
    "bench:check-regression": "vitest bench benchmarks/ci.bench.ts --run --outputFile=benchmark-results.json && tsx scripts/check-perf-regression.ts benchmark-results.json",
    "lint": "biome check . && ./scripts/check-bitecs-imports.sh",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "check:circular": "madge --circular --extensions ts,tsx src/",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build:publish",
    "build:publish": "tsup --no-sourcemap --minify",
    "size": "size-limit",
    "size:why": "size-limit --why",
    "verify-pack": "./scripts/verify-pack.sh",
    "doccheck": "tsx scripts/doccheck.ts",
    "playground": "tsx playground/index.ts"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "500 KB",
      "ignore": [
        "fs",
        "path",
        "os",
        "util",
        "child_process",
        "net",
        "tty",
        "stream",
        "events",
        "readline",
        "module",
        "url",
        "https",
        "node:fs",
        "node:path",
        "node:os",
        "node:util",
        "node:child_process",
        "node:net",
        "node:tty",
        "node:stream",
        "node:events",
        "node:readline",
        "node:module",
        "node:url",
        "node:https"
      ]
    },
    {
      "path": "dist/core/index.js",
      "limit": "100 KB",
      "ignore": [
        "fs",
        "path",
        "os",
        "util",
        "child_process",
        "net",
        "tty",
        "stream",
        "events",
        "readline",
        "module",
        "url",
        "https",
        "node:fs",
        "node:path",
        "node:os",
        "node:util",
        "node:child_process",
        "node:net",
        "node:tty",
        "node:stream",
        "node:events",
        "node:readline",
        "node:module",
        "node:url",
        "node:https"
      ]
    },
    {
      "path": "dist/components/index.js",
      "limit": "200 KB",
      "ignore": [
        "fs",
        "path",
        "os",
        "util",
        "child_process",
        "net",
        "tty",
        "stream",
        "events",
        "readline",
        "module",
        "url",
        "https",
        "node:fs",
        "node:path",
        "node:os",
        "node:util",
        "node:child_process",
        "node:net",
        "node:tty",
        "node:stream",
        "node:events",
        "node:readline",
        "node:module",
        "node:url",
        "node:https"
      ]
    }
  ],
  "keywords": [
    "terminal",
    "tui",
    "ecs",
    "cli",
    "ui",
    "ncurses",
    "curses",
    "console",
    "dashboard",
    "widget",
    "game",
    "blessed"
  ],
  "sideEffects": false,
  "author": "Jeremy Stover",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kadajett/blECSd.git"
  },
  "bugs": {
    "url": "https://github.com/Kadajett/blECSd/issues"
  },
  "homepage": "https://github.com/Kadajett/blECSd#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.0.0",
    "madge": "^8.0.0",
    "size-limit": "^12.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "bitecs": "^0.4.0",
    "zod": "^4.3.6"
  }
}
